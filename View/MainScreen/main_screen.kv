#:set MY_FONT_SIZE '30sp'

<CustomMainScreenMDRaisedButton@MDRaisedButton>:
    font_size: MY_FONT_SIZE

<MainScreenView>

    MDBoxLayout:
        spacing: 5
        padding: 5

        orientation: "vertical"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        # height: self.minimum_height

        CustomMainScreenMDRaisedButton:
            size_hint_y: 0.2
            size_hint_x: 1
            canvas.before:
                Color:
                    rgba: (1,0,0,1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            pos_hint_x: "center"
            text: "Strom"
            on_release:
                root.on_strom_pressed()

        CustomMainScreenMDRaisedButton:
            size_hint_x: 1
            size_hint_y: 0.2
            text: "Wasser"

        CustomMainScreenMDRaisedButton:
            size_hint_y: 0.2
            size_hint_x: 1
            text: "Waerme"

        CustomMainScreenMDRaisedButton:
            size_hint_y: 0.2
            size_hint_x: 1
            text: "Sport"
            on_release:
                root.on_sport_pressed()

        CustomMainScreenMDRaisedButton:
            size_hint_y: 0.2
            size_hint_x: 1
            text: "Finanzen"
            on_release:
                root.on_finances_pressed()
