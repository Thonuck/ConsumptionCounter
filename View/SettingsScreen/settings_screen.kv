<SettingsScreenView>
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Settings"
            left_action_items: [["arrow-left", lambda x: x]]
            
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            padding: "24dp"
            
            Header:
                text: "Notifications"
            
            TwoLineListItemWithSwitch:
                text: "Notifications Enabled"
                secondary_text: "App checks data for reminders"

            TwoLineListItemWithLabel:
                text: "Notification Time"
                secondary_text: "Time per day to check data"
        
            TwoLineListItemWithButton:
                id: notification_time_setting
                text: "Second Notification Time"
                secondary_text: "Time per day to check data"
                current_time: root.noty_time
                on_current_time: root.set_current_time(self.current_time)
        MDWidget:


            
            
