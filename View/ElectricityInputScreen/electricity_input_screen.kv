#:set MY_FONT_SIZE '24sp'

<CustomMDTextField@MDTextField>:
    font_size: MY_FONT_SIZE

<CustomMDRaisedButton@MDRaisedButton>:
    font_size: MY_FONT_SIZE

<ElectricityInputScreenView>
    stand_data: stand_data
    date_data: date_data
    time_data: time_data

    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Stromz√§hler Eingabe"

        AnchorLayout:

            anchor_y: "center"
            BoxLayout:
                spacing: 5
                padding: 20
                # heigth: 20
                # size_hint_y: None
                orientation: "vertical"

                CustomMDTextField:
                    id: stand_data
                    hint_text: "Zaehlerstand"
                CustomMDTextField:
                    id: date_data
                    hint_text: "Datum"
                CustomMDTextField:
                    id: time_data
                    hint_text: "Uhrzeit"

                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: 5
                    padding: 5

                    CustomMDRaisedButton:
                        size_hint: (1, None)
                        text: "Abbruch"
                        on_release:
                            root.on_cancel_pressed()

                    CustomMDRaisedButton:
                        size_hint: (1, None)
                        text: "Eingeben"
                        on_release:
                            root.on_enter_data_pressed()
